<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CinemaMobileClient.Views.ConfiteriaPage">
    
    
    <Grid BackgroundColor="#1C0038" RowDefinitions="0.08*, 0.92*">
        <Grid Grid.Row="0"
           BackgroundColor="#7B09A3">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStopCollection>
                        <GradientStop Offset="0" Color="#2E043D"/>
                        <GradientStop Offset="1" Color="#7B09A3"/>
                    </GradientStopCollection>
                </LinearGradientBrush>
            </Grid.Background>


            <Label Text="CONFITERÍA"
                 FontSize="18"
                 HorizontalOptions="Center"
                 VerticalOptions="Center"
                 TextColor="White"/>
            <Image Source="palomitas.png"
                 VerticalOptions="Center"
                 HorizontalOptions="End"
                 Margin="0,0,20,0"/>
        </Grid>
    </Grid>
</ContentPage>